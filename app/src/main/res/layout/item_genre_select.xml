        android:background="@drawable/button_simple_background_rounded"
        android:padding="8dp"
        android:text="GENRE"
        android:textAlignment="textStart"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
